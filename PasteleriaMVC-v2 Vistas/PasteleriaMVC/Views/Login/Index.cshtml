
@{
    ViewBag.Title = "Panel de Control";
}


<div class="page-content--bge5">
    <div class="container">
        <div class="login-wrap">
            <div class="login-content">
                <div class="login-logo">
                    <a href="@Url.Content("~/Content/images/Logo-Callamoxa.png")">
                        <img width="150px" src="@Url.Content("~/Content/images/Logo-Callamoxa.png")" alt="CokiesSistem">
                    </a>
                </div>
                <div class="login-form">



                    @{
                        if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            //message tiene un valor
                            <div class="alert alert-warning">@ViewBag.Message</div>
                        }
                    }

                    <form action="/Login/Login" method="post">
                        <div class="form-group">
                            <label>Usuario</label>
                            <input class="au-input au-input--full" type="correo" name="correo" placeholder="Usuario">
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            <input class="au-input au-input--full" type="password" name="password" placeholder="Contraseña">
                        </div>

                        <div class="login-checkbox">
                            <!--
                            <label>
                                <input type="checkbox" name="remember">Remember Me
                            </label>

                            <label>
                                <a href="#">Forgotten Password?</a>
                            </label>
                                -->
                        </div>

                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Ingresar</button>

                    </form>
                    <!--
                        <div class="register-link">
                        <p>
                            Don't you have account?
                            <a href="#">Sign Up Here</a>
                        </p>
                        </div>
                    -->
                </div>
            </div>
        </div>
    </div>
</div>

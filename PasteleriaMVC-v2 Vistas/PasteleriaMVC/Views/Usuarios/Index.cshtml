
@model IEnumerable<PasteleriaMVC.Models.Usuario>


@{
    ViewBag.Title = "Usuarios";
    ViewBag.UsuariosA = "active";
}
<!-- modal large -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="largeModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    <!---->
                    Cargando...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- end modal large -->
<!-- Agregamos en menu de nav-->
@Html.Partial("_Navegation")<!--nav lateral -->
<!-- PAGE CONTAINER-->
<div class="main-content">
    <div class="page-container">
        @Html.Partial("_Header")<!--nav header(top) -->
        <div class="section__content section__content--p30">
            <div class="container-fluid">


                <div class="row">
                    <div class="col-md-12">


                        <!-- USER DATA-->
                        <div class="user-data m-b-30">
                          
                            <div class="filters m-b-45">
                                
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="overview-wrap">
                                            <h3 class="title-1"><i class="zmdi zmdi-account-calendar"></i>@ViewBag.Title</h3>
                                            <a href="~/Usuarios/Create" class="au-btn au-btn-icon au-btn--blue"><i class="zmdi zmdi-plus"></i>Agregar Nuevo</a>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="table-responsive table-data">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td>Nombre</td>
                                            <td>Rol</td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                <div class="table-data__info">
                                                    <h6>
                                                        @Html.DisplayFor(modelItem => item.nombres)
                                                        @Html.DisplayFor(modelItem => item.apellidoP)
                                                        @Html.DisplayFor(modelItem => item.apellidoM)
                                                    </h6>
                                                    <span>
                                                        <a href="#">@Html.DisplayFor(modelItem => item.correo)</a>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="role @Html.DisplayFor(modelItem => item.TipoUsuario.nombre)">@Html.DisplayFor(modelItem => item.TipoUsuario.nombre)</span>
                                            </td>
                                            <td>
                                                <a href="~/Usuarios/Edit/@item.idUsuario" class="btn btn-success btn-sm"><i class="fa fa-pencil-alt"></i></a>
                                                <!--
                                                    <span class="more">
                                                        <i class="zmdi zmdi-more"></i>
                                                    </span>
                                                    <span class="more">
                                                        <i class="fa fa-trash"></i>
                                                    </span>
                                                -->

                                                <button href="#myModal" class="btnDelete btn btn-danger btn-sm" data-toggle="modal" data-id="@item.idUsuario">
                                                    <i class="fa fa-trash-alt"></i>
                                                </button>
                                                @*<button href="#myModal" class="btnDetails btn btn-primary btn-sm" data-toggle="modal" data-id="@item.idUsuario">
                                                    <i class="zmdi zmdi-more"></i>
                                                </button>*@
                                            </td>

                                        </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- END USER DATA-->


                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!---->


@section scripts{
    <script src="~/Scripts/Usuario.js"></script>
}






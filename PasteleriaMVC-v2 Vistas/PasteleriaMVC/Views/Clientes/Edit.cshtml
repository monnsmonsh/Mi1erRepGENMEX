@model PasteleriaMVC.Models.Clientes


@{
    ViewBag.Title = "Clientes";
    ViewBag.ClienteA = "active";
}

<!-- Agregamos en menu de nav-->
@Html.Partial("_Navegation")<!--nav lateral -->
<!-- PAGE CONTAINER-->
<div class="main-content">
    <div class="page-container">
        @Html.Partial("_Header")<!--nav header(top) -->
        <div class="section__content section__content--p30">
            <div class="container-fluid">



                <!------------      ------------>
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center title-2">Editar Cliente</h3>
                    </div>
                    <hr>

                    <!------------      ------------>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <!------------      ------------>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.idCliente)

                            <!------------      ------------>
                            <div class="form-group">
                                <label class="control-label mb-2">Nombre</label>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.nombres, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombres, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="control-label mb-2">Apellido Paterno</label>
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.apellidoP, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.apellidoP, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="control-label mb-2">Apellido Materno</label>
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.apellidoM, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.apellidoM, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label mb-2">Estado</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("idEstado", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idEstado, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label mb-2">Municipio</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("idMunicipios", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idMunicipios, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2">Calle</label>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.calle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.calle, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label mb-2">Localidad</label>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.colonia, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.colonia, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="control-label mb-2">Celular</label>
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.celular, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.celular, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="control-label mb-2">Telefono</label>
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label mb-2">e-mail</label>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div>
                                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                    <i class="fa fa-lock fa-lg"></i>&nbsp;
                                    <span id="payment-button-amount">Guardar</span>
                                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                                </button>
                            </div>
                            <!------------      ------------>


                        </div>
                    }
                    <!------------      ------------>
                </div>
                <!------------      ------------>




            </div>
        </div>
    </div>
</div>


<!---->
